{
    "extends": ["plugin:@nx/react"],
    "root": true,
    "ignorePatterns": ["!**/*"],
    "plugins": ["@nx"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:@nx/typescript"],
            "rules": {
                "@typescript-eslint/no-explicit-any": "warning",
                "@typescript-eslint/no-unused-vars": "warning"
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:@nx/javascript"],
            "rules": {}
        }
    ]
}
